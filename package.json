{
  "devDependencies": {
    "@html-eslint/eslint-plugin": "^0.18.0",
    "@html-eslint/parser": "^0.18.0",
    "eslint": "^8.38.0",
    "prettier": "2.8.7",
    "stylelint": "^15.5.0",
    "stylelint-config-standard": "^33.0.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "bracketSpacing": true,
    "singleAttributePerLine": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "singleQuote": false,
          "bracketSameLine": true
        }
      }
    ]
  }
}
